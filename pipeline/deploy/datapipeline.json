{
    "objects": [
        {
            "id": "Default",
            "failureAndRerunMode": "CASCADE",
            "pipelineLogUri": "#{myProjectFolder}/logs/",
            "keyPair": "research-prod",
            "role": "sirius_universal_role_prod",
            "resourceRole": "sirius_universal_role_prod",
            "maximumRetries": "1",
            "terminateAfter": "8 Hours",
            "securityGroupIds": "sg-aeeb4ad8",
            "subnetId": "subnet-156c324f",
            "maxActiveInstances": "1",
            "scheduleType": "cron",
            "schedule": {
                "ref": "DefaultSchedule"
            },
            "onFail": {
                "ref": "SNSFailureNotification"
            },
            "onSuccess": {
                "ref": "SNSSuccessNotification"
            }
        },
        {
            "id": "DefaultSchedule",
            "type": "Schedule",
            "period": "1 day",
            "startDateTime": "#{myStartDate}T02:30:00"
        },
        {
            "id": "Ec2",
            "type": "Ec2Resource",
            "imageId": "ami-525d3528",
            "instanceType": "m5.xlarge",
            "region": "#{myRegion}"
        },
        {
            "id": "Emr1",
            "type": "EmrCluster",
            "applications": [
                "spark"
            ],
            "bootstrapAction": "#{myProjectFolder}/deploy/bootstrap.sh",
            "coreInstanceCount": "1",
            "coreInstanceType": "m4.large",
            "masterInstanceType": "m4.large",
            "releaseLabel": "emr-5.31.0"
        },
        {
            "id": "TestActivity",
            "type": "ShellCommandActivity",
            "scriptUri": "#{myProjectFolder}/code/run.sh",
            "scriptArgument": [
                "#{myRunningDate}"
            ],
            "runsOn": {
                "ref": "Ec2"
            }
        },
        {
            "id": "TotalInventoryForecast",
            "type": "ShellCommandActivity",
            "scriptUri": "#{myProjectFolder}/code/forecasting/run.sh",
            "scriptArgument": [
                "#{myRunningDate}",
                "#{myProjectFolder}/code/forecasting"
            ],
            "onFail": {
                "ref": "SNSFailureNotification"
            },
            "onSuccess": {
                "ref": "SNSSuccessNotification"
            },
            "runsOn": {
                "ref": "Emr1"
            }
        },
        {
            "id": "SNSSuccessNotification",
            "subject": "Live Inventory Forecasting Pipeline Success: #{node.@pipelineId} - #{node.name}",
            "message": "Done",
            "type": "SnsAlarm",
            "topicArn": "#{mySNSTopicArn}"
        },
        {
            "id": "SNSFailureNotification",
            "subject": "Live Inventory Forecasting Pipeline Failed: #{node.@pipelineId} - #{node.name}",
            "message": "Error: #{node.errorMessage} #{node.errorStackTrace}",
            "type": "SnsAlarm",
            "topicArn": "#{mySNSTopicArn}"
        }
    ],
    "parameters": [
        {
            "id": "myRunningDate",
            "type": "String",
            "default": "#{format(@scheduledStartTime,'YYYY-MM-dd')}"
        },
        {
            "id": "mySNSTopicPdArn",
            "type": "String",
            "default": "arn:aws:sns:ap-southeast-1:084690408984:adtech_ml_pd"
        },
        {
            "id": "mySNSTopicArn",
            "type": "String",
            "default": "arn:aws:sns:us-east-1:253474845919:sirius-notification"
        }
    ]
}