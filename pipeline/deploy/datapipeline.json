{
    "objects": [
        {
            "id": "Default",
            "failureAndRerunMode": "CASCADE",
            "pipelineLogUri": "#{myProjectFolder}/logs/",
            "keyPair": "#{myKeyPair}",
            "role": "#{myRole}",
            "resourceRole": "#{myRole}",
            "schedule": {
                "ref": "DefaultSchedule"
            },
            "terminateAfter": "480 Minutes",
            "scheduleType": "cron"
        },
        {
            "id": "DefaultSchedule",
            "type": "Schedule",
            "period": "1 day",
            "startDateTime": "#{myStartDate}T02:30:00"
        },
        {
            "id": "Ec2",
            "type": "Ec2Resource",
            "imageId": "ami-525d3528",
            "instanceType": "m5.xlarge",
            "maxActiveInstances": "1",
            "region": "#{myRegion}",
            "schedule": {
                "ref": "DefaultSchedule"
            },
            "securityGroupIds": "sg-aeeb4ad8",
            "subnetId": "#{mySubnetId}"
        },
        {
            "id": "Emr1",
            "type": "EmrCluster",
            "applications": [
                "spark"
            ],
            "bootstrapAction": "#{myProjectFolder}/deploy/bootstrap.sh"
        },
        {
            "id": "TestActivity",
            "type": "ShellCommandActivity",
            "scriptUri": "#{myProjectFolder}/code/run.sh",
            "scriptArgument": [
                "#{myRunningDate}"
            ],
            "onFail": {
                "ref": "Action_SNSFailureNotification"
            },
            "onSuccess": {
                "ref": "Action_SNSSuccessNotification"
            },
            "runsOn": {
                "ref": "Ec2"
            },
            "schedule": {
                "ref": "DefaultSchedule"
            }
        },
        {
            "id": "TestActivity",
            "type": "ShellCommandActivity",
            "scriptUri": "#{myProjectFolder}/code/run.sh",
            "scriptArgument": [
                "#{myRunningDate}"
            ],
            "onFail": {
                "ref": "Action_SNSFailureNotification"
            },
            "onSuccess": {
                "ref": "Action_SNSSuccessNotification"
            },
            "runsOn": {
                "ref": "Ec2"
            },
            "schedule": {
                "ref": "DefaultSchedule"
            }
        },
        {
            "id": "Action_SNSSuccessNotification",
            "subject": "Live Inventory Forecasting Pipeline Success: #{node.@pipelineId} - #{node.name}",
            "message": "Good",
            "type": "SnsAlarm",
            "topicArn": "#{mySNSTopicArn}"
        },
        {
            "id": "Action_SNSFailureNotification",
            "subject": "Live Inventory Forecasting Pipeline Failed: #{node.@pipelineId} - #{node.name}",
            "message": "Error: #{node.errorMessage} #{node.errorStackTrace}",
            "type": "SnsAlarm",
            "topicArn": "#{mySNSTopicArn}"
        }
    ],
    "parameters": [
        {
            "id": "myRunningDate",
            "type": "String",
            "description": "running date",
            "default": "#{format(@scheduledStartTime,'YYYY-MM-dd')}",
            "optional": "true"
        }
    ]
}